<% content_for :title, "Edit Profile - Popper" %>

<div class="max-w-lg mx-auto">
  <div class="bg-white shadow-md rounded-lg p-6 mb-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Your Profile</h1>
    
    <%= form_with(model: @user, url: profile_path, method: :patch, class: "space-y-6") do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
          <h2 class="text-lg font-medium mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited your profile from being saved:</h2>
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.email_field :email, autofocus: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
      </div>

      <div class="field">
        <%= form.label :password, "New Password (leave blank if you don't want to change it)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
        <p class="text-xs text-gray-500 mt-1">Minimum 6 characters</p>
      </div>

      <div class="field">
        <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
      </div>

      <div class="flex justify-between">
        <%= form.submit "Update Profile", class: "py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= link_to "Cancel", profile_path, class: "py-2 px-4 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-md" %>
      </div>
    <% end %>
  </div>
</div>
